<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/restaurantLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:text="Restaurant:" />

    <TextView
        android:id="@+id/tableNoLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_marginLeft="20dp"
        android:text="Table No:" />

    <TextView
        android:id="@+id/dateLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_marginLeft="20dp"
        android:text="Booking Date:" />

    <TextView
        android:id="@+id/paxLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_marginLeft="20dp"
        android:text="Pax:" />

    <TextView
        android:id="@+id/statusLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_marginLeft="20dp"
        android:text="Status:" />

    <TextView
        android:id="@+id/restName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_column="1"
        android:layout_row="0"
        android:text="TextView" />

    <TextView
        android:id="@+id/tableNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_column="1"
        android:layout_row="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/reservationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_column="1"
        android:layout_row="2"
        android:text="TextView" />

    <TextView
        android:id="@+id/pax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_column="1"
        android:layout_row="4"
        android:text="TextView" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_column="1"
        android:layout_row="5"
        android:text="TextView" />

    <TextView
        android:id="@+id/reservationTimelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:text="Booking Time:"
        android:layout_marginLeft="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reservationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginLeft="5dp"
        android:layout_row="3"
        android:text="TextView" />

</GridLayout>