<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jiongyi.foodemblem.ReserveSeat">

    <TextView
        android:id="@+id/restaurantNameLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="TextView" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_height="108dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/paxLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pax:" />

            <EditText
                android:id="@+id/paxInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter no of pax"
                android:inputType="textPersonName|number" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/allocationLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Table allocated:" />

            <TextView
                android:id="@+id/tableLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/reserveBtn"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:enabled="false"
        android:text="Reserve" />
</LinearLayout>
