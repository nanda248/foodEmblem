<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jiongyi.foodemblem.fragment.RestaurantMenuFragment">

<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/restaurantamenuimg" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/restaurantNameLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/reserveBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:background="@color/table"
        android:text="Reserve Now" />
</FrameLayout>

    <ListView
        android:id="@+id/menuList"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
